@model IEnumerable<MVC_sample_app.Models.ViewModels.EmployeeViewModel>

<div class="container">
    <h1 class="my-4">Employee Management</h1>
    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="Add" method="post" enctype="multipart/form-data" class="border p-3 rounded bg-light">
                <h3>Add Employee</h3>
                <div class="form-group mb-3">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" placeholder="Name" required />
                </div>
                <div class="form-group mb-3">
                    <label for="DateOfBirth">Date of Birth</label>
                    <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" required />
                </div>
                <div class="form-group mb-3">
                    <label for="PictureFile">Picture</label>
                    <input type="file" id="PictureFile" name="PictureFile" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>

    <h2 class="my-4">Employee List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.DateOfBirth.ToShortDateString()</td>
                        <td>@employee.Email</td>
                        <td>
                            @if (employee.Picture != null)
                            {
                                <img src="data:image;base64,@Convert.ToBase64String(employee.Picture)" alt="Employee Picture" width="100" height="100" />
                            }
                        </td>
                        <td>
                            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="d-inline">
                                <input type="hidden" name="ID" value="@employee.ID" />
                                <input type="text" name="Name" value="@employee.Name" class="form-control mb-2" required />
                                <input type="date" name="DateOfBirth" value="@employee.DateOfBirth.ToString("yyyy-MM-dd")" class="form-control mb-2" required />
                                <input type="email" name="Email" value="@employee.Email" class="form-control mb-2" required />
                                <input type="file" name="PictureFile" class="form-control mb-2" />
                                <button type="submit" class="btn btn-warning">Edit</button>
                            </form>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@employee.ID" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No employees found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
